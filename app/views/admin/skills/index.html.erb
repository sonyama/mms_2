<h1>Listing skills</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @skills.each do |skill| %>
      <tr>
        <td><%= skill.name %></td>
        <td><%= link_to 'Show', [:admin, skill] %></td>
        <td><%= link_to 'Edit', edit_admin_skill_path(skill) %></td>
        <td><%= link_to 'Destroy', [:admin, skill], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Skill', new_admin_skill_path %>
